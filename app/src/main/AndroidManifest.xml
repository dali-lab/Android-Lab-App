<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="edu.dartmouth.dali.dalilab">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme" tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".LoginActivity"
                android:theme="@style/AppTheme.NoActionBar"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".DevicesActivity"
                  android:screenOrientation="portrait"
                  android:label="Devices">
        </activity>
        <activity android:name=".LightsActivity"
                  android:screenOrientation="portrait"
                  android:label="Lights">
        </activity>
        <activity android:name=".PeopleActivity"
                  android:screenOrientation="portrait"
                  android:label="People in the Lab">
        </activity>
        <activity android:name=".VotingActivity"
                  android:screenOrientation="portrait"
                  android:label="Voting Events">
        </activity>
    </application>

</manifest>